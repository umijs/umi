{
  "private": true,
  "version": "4.0.0-alpha.1",
  "scripts": {
    "bootstrap": "esno scripts/bootstrap.ts",
    "build": "pnpm -r --filter ./packages run build",
    "dev": "pnpm -r --filter ./packages --parallel run dev",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "@types/node": "^16.4.7",
    "@types/resolve": "^1.20.1",
    "@vercel/ncc": "^0.29.2",
    "dts-packer": "^0.0.1-alpha.1",
    "esno": "^0.9.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "prettier-plugin-organize-imports": "^2.3.3",
    "resolve": "^1.20.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.4",
    "ts-node": "^10.1.0",
    "tsup": "^4.12.5",
    "typescript": "^4.3.5",
    "yorkie": "^2.0.0",
    "zx": "^4.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "esno scripts/verifyCommit.ts"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  }
}
