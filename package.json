{
  "private": true,
  "version": "4.0.0-alpha.1",
  "scripts": {
    "bootstrap": "esno scripts/bootstrap.ts",
    "build": "pnpm -r --filter ./packages run build && pnpm -r --filter ./packages run build",
    "dev": "pnpm -r --filter ./packages --parallel run dev",
    "dep:update": "pnpm up --interactive --latest --recursive",
    "test": "jest"
  },
  "devDependencies": {
    "@swc/core": "^1.2.101",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/resolve": "^1.20.1",
    "@umijs/bundler-utils": "link:packages/bundler-utils",
    "@umijs/bundler-vite": "link:packages/bundler-vite",
    "@umijs/bundler-webpack": "link:packages/bundler-webpack",
    "@umijs/utils": "link:packages/utils",
    "@vercel/ncc": "^0.31.1",
    "dts-packer": "^0.0.2",
    "esno": "^0.10.1",
    "jest": "^27.3.1",
    "lint-staged": "^11.2.3",
    "prettier": "^2.4.1",
    "prettier-plugin-organize-imports": "^2.3.4",
    "resolve": "^1.20.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.3.0",
    "typescript": "^4.5.0-beta",
    "uglify-js": "^3.14.2",
    "yorkie": "^2.0.0",
    "zx": "^4.2.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "esno scripts/verifyCommit.ts"
  },
  "lint-staged": {
    "*.{jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  }
}
